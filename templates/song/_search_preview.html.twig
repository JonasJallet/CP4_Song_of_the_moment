<div class="list-group rounded-0">
    {% for song in searchSongs %}
        <a
            class="list-group-item list-group-item-action text-white border-0"
            href="{{ path('app_song_show', { slug: song.slug }) }}"
        >
            <div class="d-flex align-items-center">
                <img src="{{ asset('songs/covers/' ~ song.photoAlbum) }}" alt="song image" class="img-little-preview">
                <p class="m-0 mx-2">{{ song.title }} - {{ song.artist }}</p>
            </div>
        </a>
    {% else %}
        <div class="list-group-item bg-dark text-white border-0">Aucun RÃ©sultat !</div>
    {% endfor %}
</div>
