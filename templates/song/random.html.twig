{% extends 'base.html.twig' %}

{% block title %}
    {% for song in songs %}
        {{ song.artist }}
        -
        {{ song.title }}
    {% endfor %}
{% endblock %}

{% block styleBody %}
    {% for song in songs %}
        class="back-song" style="background-image: url('{{ asset('songs/covers/' ~ song.photoAlbum) }}')"
    {% endfor %}
{% endblock %}

{% block body %}
    {% for song in songs %}
        {{ include('song/_song.html.twig') }}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('favorite') }}
    {{ encore_entry_script_tags('playlist') }}
    <script src="{{ asset('js/youtube.js') }}"></script>
{% endblock %}
