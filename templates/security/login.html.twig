{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block styleBody %}class="back-home"
{% endblock %}

{% block body %}
    <main class="back-blur">
        <div id="back-hover">
            <section class="d-flex flex-column justify-content-center vh-100">

                <h2 class="text-center m-0">Connexion</h2>

                {% if error %}
                    <div class="row d-flex justify-content-center">
                        <div class="col-11 col-md-7 col-lg-5 text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}

                <div class="d-flex justify-content-center">
                    <form action="{{ path('app_login') }}" method="post" class="col-11 col-md-7 col-lg-5 form-login d-flex flex-column">
                        <label class="form-label" for="username">Email</label>
                        <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}">

                        <label class="form-label" for="password">Mot de passe</label>
                        <input class="form-control" type="password" id="password" name="_password">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="button btn align-self-center">Connexion</button>
                    </form>
                </div>

                <p class="text-big text-center">Vous n'avez pas encore de compte ?</p>
                <a class="text-big nav-link text-success text-center" href="{{ path('app_register') }}">
                    Inscrivez-vous ici !
                </a>
            </section>
        </div>
    </main>
{% endblock %}
